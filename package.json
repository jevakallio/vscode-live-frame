{
  "name": "vscode-live-frame",
  "displayName": "Live Frame",
  "publisher": "jevakallio",
  "repository": "https://github.com/jevakallio/vscode-live-frame",
  "description": "Live preview your web application inside VS Code",
  "icon": "docs/icon-128.png",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscode-live-frame.open"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-live-frame.open",
        "title": "Live Frame: Open"
      }
    ],
    "configuration": {
      "title": "Live Frame",
      "properties": {
        "liveFrame.url": {
          "type": "string",
          "default": null,
          "description": "URL to open in the Live Frame"
        },
        "liveFrame.title": {
          "type": "string",
          "default": null,
          "description": "Title to display in the Live Frame tab"
        },
        "liveFrame.pane": {
          "type": "string",
          "default": "Beside",
          "enum": [
            "Active",
            "Beside",
            "One",
            "Two",
            "Three",
            "Four",
            "Five",
            "Six",
            "Seven",
            "Eight",
            "Nine"
          ],
          "enumDescriptions": [
            "Open in the active pane",
            "Open in the pane beside the active one",
            "Open in the first pane",
            "Open in the second pane",
            "Open in the third pane",
            "Open in the fourth pane",
            "Open in the fifth pane",
            "Open in the sixth pane",
            "Open in the seventh pane",
            "Open in the eighth pane",
            "Open in the ninth pane"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.47.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.30.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  }
}
